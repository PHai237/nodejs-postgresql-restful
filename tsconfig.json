{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "config/*": ["./src/config/*"],
      "controllers/*": ["./src/controllers/*"],
      "models/*": ["./src/models/*"],
      "routes/*": ["./src/routes/*"],
      "services/*": ["./src/services/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true
  },
  "include": ["src"]
}
